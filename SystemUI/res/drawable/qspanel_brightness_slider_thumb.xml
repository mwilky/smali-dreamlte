<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <bitmap android:gravity="center" android:src="@drawable/scrubber_control_to_pressed_mtrl_000" android:tint="@color/brightness_slider_thumb_disabled_color" />
    </item>
    <item android:state_pressed="true" android:id="@id/pressed">
        <bitmap android:gravity="center" android:src="@drawable/scrubber_control_to_pressed_mtrl_005" android:tint="@color/brightness_slider_thumb_activated_color" />
    </item>
    <item android:id="@id/not_pressed">
        <bitmap android:gravity="center" android:src="@drawable/scrubber_control_to_pressed_mtrl_000" android:tint="@color/brightness_slider_thumb_activated_color" />
    </item>
</animated-selector>